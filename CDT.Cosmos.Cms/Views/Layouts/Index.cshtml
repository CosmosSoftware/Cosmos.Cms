@using Kendo.Mvc.UI
@model ArticleViewModel

@{
    ViewData["Title"] = "Website Layouts";
    var previewTemplate = $"<a class=\"btn btn-sm btn-primary\" href=\"{Url.Action("Preview", "Layouts")}/#: Id #\" title=\"Preview\"><span class=\"fa fa-binoculars\"></span></a>";
    var notesTemplate = $"<a class=\"btn btn-sm  btn-primary\" href=\"{Url.Action("EditNotes", "Layouts")}/#: Id #\" title=\"Edit Notes\"><span class=\"fa fa-clipboard\"></span></a>";
    var editCodeTemplate = $"<a class=\"btn btn-sm  btn-primary\" href=\"{Url.Action("EditCode", "Layouts")}/#: Id #\" title=\"Edit Code\"><span class=\"fa fa-edit\"></span></a>";
    var btnGroup = "<div class=\"btn-group\" role=\"group\" aria-label=\"Basic example\">#= getDefaultButton(IsDefault, Id) #" +
                   previewTemplate + notesTemplate + editCodeTemplate + "</div>";
}
<div class="container mt-4">
    <div class="row">
        <div class="col">
            <h3>@ViewData["Title"]</h3>
            <hr />
            <p>Shown below lists the layouts loaded into your website.  Each gives your website a specific look for each page in your website.</p>
            <p>Click &quot;Create New&quot; to start building your own style.</p>
        </div>
    </div>
    <div class="row">
        <div class="col mb-4">
            <div class="d-flex">
                <a href="https://mdbootstrap.com/docs/standard/" class="logo-circle d-flex align-items-center justify-content-center me-2 hover-shadow">
                    <img src="https://mdbcdn.b-cdn.net/wp-content/themes/mdbootstrap4/content/en/_mdb5/_assets/img/icons/bootstrap.webp" alt="Bootstrap version" height="17">
                </a>

                <a href="https://mdbootstrap.com/docs/b5/angular/" class="logo-circle d-flex align-items-center justify-content-center me-2 hover-shadow">
                    <img src="https://mdbcdn.b-cdn.net/wp-content/themes/mdbootstrap4/content/en/_mdb5/_assets/img/icons/angular.webp" alt="Angular version" height="17">
                </a>

                <a href="https://mdbootstrap.com/docs/b5/react/" class="logo-circle d-flex align-items-center justify-content-center me-2 hover-shadow">
                    <img src="https://mdbcdn.b-cdn.net/wp-content/themes/mdbootstrap4/content/en/_mdb5/_assets/img/icons/react.webp" alt="React version" height="17" style="filter: saturate(200%) brightness(70%)">
                </a>

                <a href="https://mdbootstrap.com/docs/b5/vue/" class="logo-circle d-flex align-items-center justify-content-center me-2 hover-shadow">
                    <img src="https://mdbcdn.b-cdn.net/wp-content/themes/mdbootstrap4/content/en/_mdb5/_assets/img/icons/vue.webp" alt="Vue version" height="17">
                </a>

                <a href="https://mdbootstrap.com/docs/standard/" class="logo-circle d-flex align-items-center justify-content-center me-2 hover-shadow">
                    <img src="https://mdbcdn.b-cdn.net/wp-content/themes/mdbootstrap4/content/en/_mdb5/_assets/img/icons/javascript.webp" alt="JavaScript version" height="17">
                </a>

                <a href="https://mdbootstrap.com/docs/b4/jquery/" class="logo-circle d-flex align-items-center justify-content-center me-2 hover-shadow">
                    <img src="https://mdbcdn.b-cdn.net/wp-content/themes/mdbootstrap4/content/en/_mdb5/_assets/img/icons/jquery.webp" alt="jQuery version" height="17">
                </a>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <a class="btn btn-sm btn-primary" href="@Url.Action("Create")">Create New</a>
            <a class="btn btn-sm btn-primary" title="Import one of the community layouts." href="@Url.Action("CommunityLayouts")">Import Layout</a>

            @(Html.Kendo().Grid<LayoutIndexViewModel>().Name("grid")
            .Columns(col =>
            {
            col.Template(btnGroup).Title("Menu");
            col.Bound(m => m.Id).Visible(false);
            col.Bound(m => m.IsDefault).Visible(false);
            col.Bound(m => m.LayoutName).Encoded(false);
            col.Bound(m => m.Notes).Encoded(false);
            col.Command(c => c.Destroy());
            })
            .ToolBar(tool => { tool.Search(); })
            .DataSource(data =>
            {
            data.Ajax()
            .Model(m => { m.Id("Id"); })
            .Read("Read_Layouts", "Layouts")
            .Destroy("Destroy_Layout", "Layouts");
            })
            )
        </div>
    </div>
    <div class="row">
        <div class="col mt-4">
            <p>Beyond appearance, changing layouts can have far reaching affects on how your site functions. Change layouts with caution.</p>
        </div>
    </div>
</div>
<script>
    function getDefaultButton(isDefault, id) {
        if (isDefault === null || isDefault === false) {
            return "<a href='@Url.Action("SetLayoutAsDefault")/" + id + "' title='Set this as the default layout.' class='btn btn-sm btn-secondary'><span class='fa fa-check-circle-o'></span></a>";
        }
        return "<div class='btn btn-sm btn-primary' title='Is now the default layout for this website.'><span class='fa fa-check-circle'></span></div>";
    }
</script>