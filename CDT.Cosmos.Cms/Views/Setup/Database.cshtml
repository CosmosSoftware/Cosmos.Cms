@using CDT.Cosmos.Cms.Models
@model SetupIndexViewModel
@{
    ViewData["Title"] = "Cosmos Database Setup";
}
<div class="container mt-5 pt-2">
    @if (Model.SetupState == SetupState.SetupAdmin)
    {
        <div class="row">
            <div class="col">
                <h3>Setup Administrator Account</h3>
                <hr />
                <p>Please use the form below to register an administrator account for this website.</p>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <form id="frmAccount" asp-action="Database" method="post">
                    @Html.AntiForgeryToken()
                    <div class="form-group">
                        <label asp-for="AdminEmail"></label>
                        <input asp-for="AdminEmail" class="form-control" />
                        <span asp-validation-for="AdminEmail" class="badge badge-primary"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password"></label>
                        <input asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="badge badge-primary"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ConfirmPassword"></label>
                        <input asp-for="ConfirmPassword" class="form-control" />
                        <span asp-validation-for="ConfirmPassword" class="badge badge-primary"></span>
                    </div>
                    <button type="submit" class="btn btn-primary">Register</button>
                </form>
                <div asp-validation-summary="All" class="text-danger"></div>
            </div>
        </div>

        @section Scripts {
    <partial name="_ValidationScriptsPartial" />
    }
    }
    else if (Model.SetupState == SetupState.Upgrade)
    {
        <div class="row">
            <div class="col">
                <h3>Cosmos Updated</h3>
                <hr />
            </div>
        </div>
        <div class="row">
            <div class="col">
                <p>The database has been updated to the latest version.</p>
                <p>Before using your website:</p>
                <ul>
                    <li>Disable setup mode by removing the configuration variable &quot;CosmosAllowSetup&quot; from your Editor website.</li>
                    <li>Close all web browsers.</li>
                    <li>Open a new web browser and log into the Editor website.</li>
                </ul>
            </div>
        </div>
    }
    else
    {
        <div class="row">
            <div class="col">
                <h3>Cosmos Status</h3>
                <hr />
            </div>
        </div>
        <div class="row">
            <div class="col">
                <h5>Up to Date</h5>
                <p>Cosmos is now running the latest version.</p>
                <p><span class="badge k-badge-success">IMPORTANT!</span> Before using your website:</p>
                <ul>
                    <li>Remove the configuration variable &quot;CosmosAllowSetup&quot; from your Editor website.</li>
                    <li>Close all web browsers.</li>
                    <li>Open a new web browser and log into the Editor website.</li>
                </ul>
            </div>
        </div>
    }
</div>
