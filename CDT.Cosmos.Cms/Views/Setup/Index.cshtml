@using CDT.Cosmos.Cms.Models
@model SetupIndexViewModel
@{
    ViewData["Title"] = "Cosmos Setup";
}
<div class="container">
    @if (Model.SetupState == SetupState.NewInstall)
    {
        <div class="row">
            <div class="col">
                <div class="mb-5">
                    <h1><i class="fa fa-puzzle-piece"></i> New Install</h1>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Setup Administrator Account</h3>
                </div>
                <div class="card-body">
                    <p>Please use the form below to register an administrator account for this website.</p>
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <form asp-action="Index" method="post">
                        @Html.AntiForgeryToken()
                        <div class="form-group">
                            <label asp-for="AdminEmail"></label>
                            <input asp-for="AdminEmail" class="form-control" />
                            <span asp-validation-for="AdminEmail" class="badge badge-primary"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Password"></label>
                            <input asp-for="Password" class="form-control" />
                            <span asp-validation-for="Password" class="badge badge-primary"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ConfirmPassword"></label>
                            <input asp-for="ConfirmPassword" class="form-control" />
                            <span asp-validation-for="ConfirmPassword" class="badge badge-primary"></span>
                        </div>
                        <button type="submit" class="btn btn-dark">Register</button>
                    </form>
                    <div asp-validation-summary="All" class="text-danger"></div>
                </div>
            </div>
        </div>
    }
</div>
