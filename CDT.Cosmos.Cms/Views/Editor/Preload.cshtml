@using Kendo.Mvc.UI
@addTagHelper *, Kendo.Mvc
@model PreloadViewModel

@{
    ViewData["Title"] = "Preload CDN";
}
<div class="container">
    <form asp-controller="Editor" asp-action="Preload" method="post">
        <div class="row">
            <div class="col-md-12">
                <h1>Preload CDN</h1>
                <p>
                    Use this tool to preload the Content Distribution Network (CDN) in use for this website.
                    This can improve website speed for web pages that are not viewed as much as others.
                </p>
            </div>
        </div>
        @if (Model.PageCount.HasValue)
        {
            <div class="row">
                <div class="col-md-12">
                    <h4>Preload Complete</h4>
                    <p>
                        Processed @Model.PageCount.Value page(s).
                    </p>
                </div>
            </div>
        }
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label for="PreloadCdn">Preload CDN</label>
                    <kendo-switch for="PreloadCdn" enabled="true" checked="true">
                        <messages checked="YES" unchecked="NO" />
                    </kendo-switch>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <p><span class="badge badge-warning">IMPORTANT!</span> For websites with many web pages, this process may take a few minutes to complete.</p>
                <br />
                <button id="btnPublish" class="btn btn-sm btn-success" type="submit">Preload Content</button>
            </div>
        </div>
    </form>
</div>

@{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}