@model ArticleViewModel
@{
    Layout = "_CosmosLayout";
    ViewData["Title"] = Model.Title;
}
@if (string.IsNullOrEmpty(Model.CacheKey))
{
    @Html.Raw(Model.Content)
}
else
{
    <distributed-cache name="@Model.CacheKey, " expires-on="@(Model.Expires ?? DateTime.UtcNow.AddSeconds(Model.CacheDuration))">
        @Html.Raw(Model.Content)
    </distributed-cache>
}