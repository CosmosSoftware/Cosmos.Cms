@model CDT.Cosmos.Cms.Common.Models.ArticleViewModel
<!DOCTYPE html>
<html>
<head>
<distributed-cache name="Cosmos-head" expires-after="@TimeSpan.FromSeconds(120)" vary-by-route="id" vary-by-query="lang">
    <title>@Model.Title</title>

    @Html.Raw(Model.Layout.Head)
    @*
        Page specific header
    *@
    @Html.Raw(Model.HeaderJavaScript)
    @*
        Application Insights Scripts
    *@
    @Html.Raw(JavaScriptSnippet.FullScript)
    <script>
        document.documentElement.setAttribute("lang", "@Model.LanguageCode");
    </script>
</distributed-cache>
</head>
    <body>
        @RenderBody()
        @(await RenderSectionAsync("Scripts", false))
    </body>
</html>
